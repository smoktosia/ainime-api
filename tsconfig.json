{
  "compilerOptions": {
    "target": "esnext",

    "module": "commonjs",
    "strict": true,

    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],

    "outDir": "./build/",
    // "baseUrl": "./",
    "baseUrl": "src",

    "paths": {
      "src/*": ["src/*"]
    },

    /* Advanced Options */
    "skipLibCheck": true,                     /* Skip type checking of declaration files. */
    "forceConsistentCasingInFileNames": true,  /* Disallow inconsistently-cased references to the same file. */

    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]

  },
  "include": [
    // "src/index.ts",
    "src/**/*",
    // "src/types/"
  ]
}
